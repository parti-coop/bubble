.comment
  .comment-header.clearfix
    - if can? :manage, comment
      .comment-buttons
        %span
          = link_to '수정', [:edit, comment]
        \|
        %span
          = link_to '삭제', comment, method: :delete
    .comment-meta
      .comment-name= comment.name
      .comment-created-at= date_f comment.created_at

  .comment-body= comment.body
