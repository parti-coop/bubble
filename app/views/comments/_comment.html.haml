.comment
  .comment-body= comment.body

  .comment-footer.clearfix
    - if can? :manage, comment
      .comment-buttons
        %span
          = link_to '수정', [:edit, comment]
        \|
        %span
          = link_to '삭제', comment, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }
    .comment-meta
      %span.comment-name= comment.name
      %span.comment-created-at= date_f comment.created_at

