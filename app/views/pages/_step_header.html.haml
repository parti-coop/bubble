- step ||= 3
%section#header
  .container.container-xs-space
    .top-menu
      %span
        = link_to '홈', root_path
      %span
        - if user_signed_in?
          = link_to '로그아웃', destroy_user_session_path, class: 'pull-right join', method: :delete
        - else
          = link_to '당원가입 / 로그인', new_user_registration_path, class: 'pull-right join'
%section#steps
  .container
    .row
      .project-steps
        .col-md-3.col-xs-3
          .project-step1
            =link_to step1_path, class: ('active' if step == 1) do
              - if browser.device.mobile?
                법안 정하기
                %br
                6/7 ~ 6/26
              - else
                발의할 법안
                %br.visible-xs
                정하기
