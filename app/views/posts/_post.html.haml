%tr{data: {action: 'clickable-row', href: post_url(post)}}
  %td{class: "#{@board_slug == 'all' ? 'post-type' : 'post-id'}"}
    - if local_assigns[:as_sticky]
      %span.sticky-label
        공지
    - elsif local_assigns[:as_best]
      %span.best-label
        베스트
    - else
      = @board_slug == 'all' ? Post::BOARDS[post.board_slug] : post.sequential_id

  %td.post-title
    = post.title
    - if post.comments.any?
      %span.comment
        %i.fa.fa-comment-o.fa-flip-horizontal
        = post.comments.count
  %td.post-name
    = mask_name(post.name)
  %td.post-upvote
    = post.upvotes_count
  %td.post-created-at
    = date_f post.created_at
